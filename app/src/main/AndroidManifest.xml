<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indytek.pufsmanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PufsManagement">
        <activity android:name=".BotonesActivity"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".Pedidos"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".Carrito"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".Perfil"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".LogIn"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".Registro"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity android:name=".Productos"
            android:theme="@style/Theme.PufsManagement.NoActionBar"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PufsManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>