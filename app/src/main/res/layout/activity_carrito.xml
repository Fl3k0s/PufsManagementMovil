<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carrito">

    <ListView
        android:id="@+id/listViewProducto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCancelCarrito"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="Cancelar" />

            <Button
                android:id="@+id/buttonAddCarrito"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="Ver MÃ¡s" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPrecioCarrito"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="0"
                android:textSize="56sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/euro" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonPagarCarrito"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Pagar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>